@model SISCOSMAC.Web.ViewModels.UsuarioViewModel;

<head>

    <script type="text/javascript">
        function validateDropdown() {
            var selectedval = $('#DepartamentoId').find(":selected").text();
            if (selectedval == "") {
                $('#errorMgspan').text("* Campos requeridos");
                return false;
            }
        }

    </script>
</head>

<h3 class="text-center">Editar Usuario</h3>

<form method="post" ast-action="Editar">
    <div class="row px-2 mx-2 border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UsuarioId" />
        <input asp-for="PasswordClara" value="1" type="hidden" />


        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" onkeyup="mayus(this)"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="APaterno"></label>
                </div>
                <div class="col-8">
                    <input asp-for="APaterno" class="form-control" onkeyup="mayus(this)"/>
                    <span asp-validation-for="APaterno" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AMaterno"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AMaterno" class="form-control" onkeyup="mayus(this)"/>
                    <span asp-validation-for="AMaterno" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UsuarioLogin"></label>
                </div>
                <div class="col-8">
                    <input asp-for="UsuarioLogin" class="form-control" onkeyup="mayus(this)"/>
                    <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Rol"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Rol" class="form-control" >
                        <option selected value="">Selecciona un Rol</option>
                        <option value="MANTENIMIENTO">DEPARTAMENTO DE MATENIMIENTO</option>
                        <option value="USUARIO">DEPARTAMENTO GENERAL</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DepartamentoId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.DepartamentoId"><option selected value="">Selecciona un departamento</option></select>
                    <span id="errorMgspan" asp-validation-for="DepartamentoId" class="text-danger"></span>
                </div>
            </div>


            <br />

            <div class="form-group ">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Actualizar</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="form-group ">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <a asp-action="EditarCont" asp-controller="Usuarios" asp-route-id="@Model.UsuarioId" class="btn btn-danger form-control">Editar Contraseña</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>