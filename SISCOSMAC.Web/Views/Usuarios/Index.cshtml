

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text text-black-50 text-center">Registro de Usuarios</h1>



<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="font-weight-bold">Lista de Usuarios</h2>
            
        </div>
        <div class="col-6 text-right">
            <a asp-action="Crear" asp-controller="Usuarios" class="btn btn-primary" ><i class="fas fa-plus "> Crear Nuevo Usuario</i></a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblUsuarios" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>                
                <th>Rol</th>
                <th>Departamento</th>
                <th>  </th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 
    <script src="~/js/usuarios.js"></script>
}
