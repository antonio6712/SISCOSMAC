@model SISCOSMAC.Web.ViewModels.SolicitudMantenimientoCorrectivoVM;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SolicitudPDF</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SolicitudPDF.css" />
    
</head>
<body>

    <table class="Tsuperior">
        <thead>
            <tr>
                <th ROWSPAN="2">
                    <img src="~/images/logo.png" class="imagenLogo" />
                </th>
                <th style="text-align:center; font-size:18px; width:470px;">Nombre del Documento: Formato para Solicitud  <p style="margin:auto;">de Mantenimiento Correctivo</p></th>
                <th>
                    Código:
                    <p style="margin:auto;">TecNMACA-AD-PO-001-02</p>
                </th>
            </tr>
            <tr>
                <th style="text-align:center; font-size:18px;">
                    Referencia al punto de la Norma
                    <p style="margin:auto;">ISO 9001:2015   7.1.3, 7.1.4</p>
                </th>
                <th style="padding:inherit;">
                    <table style="width:100%">
                        <tr>
                            <th>Revisión: 2</th>
                        </tr>
                        <tr style="border-top:2px solid"><th>Página 1 de 2</th></tr>
                    </table>
                </th>
            </tr>

        </thead>
    </table>

    <br />
    <h4 style="text-align:center; font-weight: bold;">SOLICITUD MANTENIMIENTO CORRECTIVO</h4>

    <br />
    <table class="TPeque" style="margin-left: 590px">
        <tbody>
            <tr>
                <td style="width:250px;">Recursos Materiales y Servicios</td>
                <td style="width:40px;">
                     @if(@Model.DepartamentoDirigido=="RECURSOS MATERIALES"){
                        <i>✔</i>
                    }
                </td>
            </tr>
            <tr>
                <td>Mantenimiento de Equipo</td>
                <td>
                     @if(@Model.DepartamentoDirigido=="MANTENIMIENTO DE EQUIPO"){
                        <i>✔</i>
                    }
                </td>
            </tr>
            <tr>
                <td>Centro de Cómputo</td>
                <td>
                    @if(@Model.DepartamentoDirigido=="CENTRO DE COMPUTO"){
                        <i>✔</i>
                    }
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <div style="margin-left: 50px">
        <p style="display:inline-block;">Folio:  </p>
        <p style="text-decoration: underline; display: inline-block;">@Model.Folio</p>
    </div>

    
    <table style="width:840px; margin-left:50px; height: 40px">
        <tr>
            <th valign="top" style="border: solid 2px; padding-left:5px;  ">Área Solicitante: @Model.AreaSolicitante</th>
        </tr>
    </table>

    <br />
    <table style="width:840px; margin-left:50px; ">
        <tr>
            <th valign="top" style="border: solid 2px; padding-left:5px; height: 40px ">Nombre y Firma del Solicitante: @Model.NombreSolicitante</th>
        </tr>
        <tr>
            <th valign="top" style="border: solid 2px; padding-left:5px; height: 40px ">Fecha de Elaboración:  @Model.FechaElaboracion</th>
        </tr>
        <tr>
            <th valign="top" style="border: solid 2px; padding-left:5px; height: 40px ">Descripción del servicio solicitado o falla a reparar: </th>
        </tr>
        <tr>
            <th valign="top" style="border: solid 2px; padding-left:5px; height: 500px "> @Model.DescripcionServicios</th>
        </tr>
    </table>
    

    <br />

    <h6 style="margin-left:50px;">c.c.p. Departamento de Planeación Programación y Presupuestación  </h6>
    <h6 style="margin-left:50px;">c.c.p. Área Solicitante.</h6>
    <small style="margin-left:190px;">Toda copia ELECTRÓNICA o IMPRESA es un "Documento No controlado" a excepción del original</small>
    <br />
    <small style="margin-left:50px;">TecNMACA-AD-PO-001-04 <p style="margin-left:620px; display:inline-block;">Rev. 2</p></small>

    
</body>
</html>
